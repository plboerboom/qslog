{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ExerciseRecord",
  "description": "TO COME",
  "type": "object",
  "properties": {
    "datetime": {
      "type": "string",
      "format": "date-time"
    },
    "workout": { "oneOf": [
      {"$ref": "#/definitions/sequence"},
      {"$ref": "#/definitions/atomicExercise"}
      ]
    }
  },

  "required" : ["datetime", "workout"],

  "definitions": {
    "sequence" : {
      "type": "array",
      "items": {
        "anyOf": [
          {"$ref": "#/definitions/sequence"},
          {"$ref": "#/definitions/atomicExercise"},
          {"$ref": "#/definitions/rest"}
          ]
      }
    },
    "atomicExercise": { "oneOf": [
      {"$ref": "#/definitions/deadlift"},
      {"$ref": "#/definitions/ringPullup"}
    ]
    },
    "baseExercise": {
      "type": "object",
      "properties": {
        "name": {"type": "string"}
      },
      "required": ["name"]
    },
    "baseRepExercise": { "allOf": [
      {"$ref": "#/definitions/baseExercise"},
      {"properties":
        { "reps": { "type": "integer" } },
        "required": ["reps"]
      }
      ]
    },
    "rest":{
      "type": "object",
      "properties": {
        "name": {"enum": ["Rest"]},
        "duration": {
          "type": "object",
          "properties": {
            "units": {"enum": ["second", "minute", "hour"]},
            "quantity": {"type": "number"}
          }
        }
      }
    },
    "deadlift": { "allOf": [
      {"$ref": "#/definitions/baseRepExercise"},
      {"properties": { "name": { "pattern": "Deadlift" } } }
      ]
    },
    "ringPullup": { "allOf": [
      {"$ref": "#/definitions/baseRepExercise"},
      {"properties": { "name": { "pattern": "Ring pullup" } } }
      ]
    }
  }
}
