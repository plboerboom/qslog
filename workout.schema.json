{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ExerciseRecord",
  "description": "TO COME",
  "type": "object",
  "properties": {
    "datetime": {
      "type": "string",
      "format": "date-time"
    },
    "workout": {"$ref": "#/definitions/sequence"}
  },

  "required" : ["datetime", "workout"],

  "definitions": {
    "sequence" : {
      "type": "array",
      "items": {
        "anyOf": [
          {"$ref": "#/definitions/sequence"},
          {"$ref": "#/definitions/atomicExercise"}
          ]
      }
    },
    "atomicExercise": { "oneOf": [
      {"$ref": "#/definitions/deadlift"},
      {"$ref": "#/definitions/ringPullup"}
    ]
    },
    "baseExercise": {
      "type": "object"
    },
    "deadlift": {
      "allOf": [
        {"$ref": "#/definitions/baseExercise"},
        {"properties":
          { "name": { "type": "string", "pattern": "Deadlift" } },
          "required": ["name"]
        }
          ]
    },
    "ringPullup": { "allOf": [
      {"$ref": "#/definitions/baseExercise"},
      {"properties": {
        "name": {
          "type": "string", 
          "pattern": "Ring pullup"
        }
      },
      "required": ["name"]
      }
      ]
    }
  }
}
